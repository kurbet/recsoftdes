from random import randint


board = []

for x in range(6): #criação do campo
    board.append(["O"] * 6)

def cria_campo(board):  #criação do campo - tirando aspas
    for row in board:
        zz = " "
        a11 = zz.join(row)
        print (a11)

print ("Vamos começar o jogo!" \
"Bem vindo ao Batalha Naval!")
cria_campo(board)

def sorteia_linha(board): #sorteia a linha - poisção do barco
    return randint(1, len(board) - 1)

def sorteia_coluna(board): #sorteia a coluna - posição do barco
    return randint(1, len(board[0]) - 1)

linha_barco = sorteia_linha(board)
coluna_barco = sorteia_coluna(board)
turn = 0
for turn in range(4):  #criando chances
    turn = turn + 1
    user_linha = int(input("Tente acertar a linha: "))  #pergunta a linha
    user_coluna = int(input("Tente acertar a coluna: "))  #pergunta a coluna

    if user_linha == linha_barco and user_coluna == coluna_barco:
        print ("Parabéns! Você me venceu!")
        break
    else:
        if (user_linha >= 6) or (user_coluna >= 6):
            print ("Putzz..aí já é terra firme!")
        elif(board[user_linha][user_coluna] == "X"):
            print ("Você já tentou essa!")
        else:
            if turn == 3:
                print ("Game Over")
            else:
                print ("Eu ganhei :)")
                board[user_linha][user_coluna] = "X" 
                print  ("Turn", turn + 1)        
    
        cria_campo(board)
        
        
    
